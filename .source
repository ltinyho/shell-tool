#!/bin/bash
# SHEEL TOOL
# Easy to tap command
# Author: adevjoe
# Usage: source $HOME/.st/.source

ST_PATH=${HOME}/.st
export PATH=$PATH:${ST_PATH}:${ST_PATH}/func

# ALIAS
alias zshconfig="mate ~/.zshrc"
alias ohmyzsh="mate ~/.oh-my-zsh"
alias vi=vim
alias ll="ls -alFh"
alias dc=docker-compose
alias proxy='export https_proxy=http://127.0.0.1:7890;export http_proxy=http://127.0.0.1:7890;export all_proxy=socks5://127.0.0.1:7891'

alias unproxy='unset http_proxy;unset https_proxy;'
alias pg="ps aux | head -1; ps aux | grep -v grep | grep"
alias myip="curl -s http://whatismyip.akamai.com/"
alias avd=$ANDROID_HOME"/tools/emulator -avd"
alias rn="react-native"
alias cpd="cap production deploy"
alias nbd="npm run build:prod"
alias k=kubectl
# ENV
# Golang
export PATH=$PATH:/usr/local/go/bin
export GOPATH=$HOME/go
export PATH=$PATH:$GOPATH/bin
export GOPROXY=https://goproxy.cn

# NDK
export ANDROID_NDK=$HOME//Library/Android/Ndk
export PATH=$PATH:$ANDROID_NDK

# 同步 history 命令
setopt SHARE_HISTORY
# shell
export PATH=$PATH:~/work/shell
